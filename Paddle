package com.neumont.csc150.PongModel;

public class Paddle {
	private static final int topEdgeMod = -5;
	private static final int topMidMod  = -3;
	private static final int CenterMod  = 0;
	private static final int botMidMod  = 3;
	private static final int botEdgeMod = 5;
	private int whichPlayer;
	private int Y;
	
	public Paddle(int player){
		this.setWhichPlayer(player);
	}
	
	public int getY(){
		return Y;
	}
	
	public void setY(int Y){
		this.Y = Y;
	}
	
	public int getTopEdgeMod() {
		return topEdgeMod;
	}
	
	public int getTopMidMod() {
		return topMidMod;
	}
	
	public int getCenterMod() {
		return CenterMod;
	}
	
	public int getBotMidMod() {
		return botMidMod;
	}
	
	public int getBotEdgeMod() {
		return botEdgeMod;
	}
	
	public int getWhichPlayer(){
		return this.whichPlayer;
	}
	
	public void setWhichPlayer(int player){
		this.whichPlayer = player;
	}

}
