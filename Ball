package com.neumont.csc150.PongModel;

public class Ball {
	private int spawnSide;
	private boolean isTouching;
	private int X;
	private int Y;
	private int xTraverse;
	private int yTraverse;
	
	public Ball(){
		this.setTouching(false);
		this.setSpawnSide(0);
	}
	
	public int getSpawnSide() {
		return this.spawnSide;
	}
	
	public void setSpawnSide(int spawnSide) {
		this.spawnSide = spawnSide;
	}
	
	public boolean isTouching() {
		return this.isTouching;
	}
	
	public void setTouching(boolean isTouching) {
		this.isTouching = isTouching;
	}
	
	public int getX() {
		return this.X;
	}
	
	public void setX(int x) {
		this.X = x;
	}
	
	public int getY() {
		return this.Y;
	}
	
	public void setY(int y) {
		this.Y = y;
	}
	
	public int getXTraverse() {
		return this.xTraverse;
	}
	
	public void setXTraverse(int xTraverse) {
		this.xTraverse = xTraverse;
	}
	
	public int getYTraverse() {
		return this.yTraverse;
	}
	
	public void setYTraverse(int yTraverse) {
		this.yTraverse = yTraverse;
	}

}
